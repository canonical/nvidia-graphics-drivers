diff --git a/Kbuild b/Kbuild
index 31fc135..8503d67 100644
--- a/Kbuild
+++ b/Kbuild
@@ -67,6 +67,7 @@ EXTRA_CFLAGS += -Wall -MD $(DEFINES) $(INCLUDES) -Wno-cast-qual -Wno-error -Wno-
